# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# SendGrid Configuration
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=workshops@yourdomain.com

# Square Configuration
***REMOVED***=your-square-access-token
SQUARE_LOCATION_ID=your-square-location-id
SQUARE_ENVIRONMENT=sandbox

# Google Calendar Configuration
GOOGLE_CALENDAR_ID=your-calendar-id

# Google Authentication (choose one method)
# 1. Application Default Credentials (recommended for production)
USE_APPLICATION_DEFAULT_CREDENTIALS=true
SKIP_GOOGLE_CALENDAR_CHECK=false

# 2. Service Account (legacy)
# GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./googlecloud.json

# 3. OAuth Client (alternative)
# ***REMOVED***=your-google-client-id
# ***REMOVED***=your-google-client-secret
# ***REMOVED***=your-refresh-token

# Application Configuration
NODE_ENV=development
PORT=3000