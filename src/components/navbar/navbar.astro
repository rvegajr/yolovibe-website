---
import Container from "@/components/container.astro";
import Link from "@/components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Knowledge Unbound",
    path: "/knowledge-unbound",
  },
  {
    title: "Workshops",
    path: "/#offerings",
    children: [
      { title: "3-Day Rapid VibeCode", path: "/#offerings" },
      { title: "5-Day Business Plan Intensive", path: "/#offerings" },
    ],
  },
  {
    title: "Unprivacy",
    path: "/unprivacy",
  },
  {
    title: "Book Now",
    badge: true,
    path: "/#book",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg">
          <span class="font-bold text-transparent bg-clip-text bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 dark:from-pink-400 dark:via-purple-400 dark:to-indigo-400 vibe-title">YOLOVibeCode</span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900 dark:text-gray-100 dark:hover:bg-gradient-to-r dark:hover:from-purple-400 dark:hover:to-blue-400 dark:hover:bg-clip-text dark:hover:text-transparent dark:font-medium transition-all duration-300"
                      style="color: white !important;">
                      <span class="dark:bg-gradient-to-r dark:from-gray-100 dark:to-white dark:bg-clip-text dark:text-transparent dark:font-semibold"> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="flex items-center gap-3 mt-4 lg:mt-0">
          <a
            href="/login"
            class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900 dark:text-white dark:hover:bg-gradient-to-r dark:hover:from-purple-400 dark:hover:to-pink-400 dark:hover:bg-clip-text dark:hover:text-transparent dark:font-semibold transition-all duration-300"
            style="color: white !important;"
          >
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Login
          </a>
        </div>
      </MenuItems>
    </Astronav>
  </header>
</Container>
