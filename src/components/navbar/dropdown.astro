---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";
const { title, lastItem, children } = Astro.props;
---

<li class="relative">
  <DropdownContainer class="group">
    <button
      class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 text-gray-600 hover:text-gray-900 dark:text-white dark:hover:bg-gradient-to-r dark:hover:from-purple-400 dark:hover:to-cyan-400 dark:hover:bg-clip-text dark:hover:text-transparent dark:font-semibold transition-all duration-300"
      style="color: white !important;">
      <span class="dark:bg-gradient-to-r dark:from-gray-100 dark:to-white dark:bg-clip-text dark:text-transparent dark:font-semibold">{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "lg:absolute w-full lg:w-48 z-10",
          lastItem
            ? "lg:right-0 origin-top-right"
            : "lg:left-0 origin-top-left",
        ]}>
        <div
          class="px-3 lg:py-2 lg:bg-white lg:rounded-md lg:shadow-lg lg:border dark:bg-gradient-radial dark:from-purple-900/95 dark:via-indigo-900/90 dark:to-gray-900/95 dark:border-purple-400/50 flex flex-col backdrop-blur-sm"
          style="background: radial-gradient(ellipse at center, rgba(147, 51, 234, 0.95) 0%, rgba(79, 70, 229, 0.90) 50%, rgba(17, 24, 39, 0.95) 100%) !important;">
                      {
              children.map((item) => (
                <a
                  href={item.path}
                  class="py-2 px-3 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-50 dark:text-white dark:hover:bg-purple-600/20 dark:hover:text-purple-200 dark:font-medium transition-all duration-300 border-b border-gray-100 dark:border-gray-700 last:border-b-0"
                  style="color: white !important; text-shadow: 0 1px 2px rgba(0,0,0,0.5);"
                  onclick={`scrollToWorkshop('${item.title.includes('3-Day') ? '3day' : '5day'}'); return false;`}>
                  {item.title}
                </a>
              ))
            }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>
