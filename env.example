# Copy this to .env and fill in your values

# ===== DATABASE CONFIGURATION =====
# For local development (SQLite)
***REMOVED***="file:local.db"

# For production (Turso/LibSQL)
# ***REMOVED***="libsql://your-database-url.turso.io"
# ***REMOVED***="your-turso-auth-token"

# ===== EMAIL SERVICE (SendGrid) =====
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="YOLOVibe Team"

# ===== PAYMENT SERVICE (Square) =====
***REMOVED***="your-square-application-id"
***REMOVED***="your-square-access-token"
SQUARE_ENVIRONMENT="sandbox"  # or "production"

# ===== GOOGLE CALENDAR (Optional) =====
GOOGLE_CALENDAR_CLIENT_ID="your-google-client-id"
GOOGLE_CALENDAR_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALENDAR_REFRESH_TOKEN="your-refresh-token"

# ===== APPLICATION SETTINGS =====
NODE_ENV="development"  # or "production"
APP_URL="http://localhost:4321"  # or your production URL

# ===== SECURITY =====
JWT_SECRET="your-jwt-secret-key"
ADMIN_EMAIL="admin@yourdomain.com"

# ===== MONITORING & ALERTS =====
SLACK_WEBHOOK_URL="your-slack-webhook-url"
ALERT_EMAIL="alerts@yourdomain.com"